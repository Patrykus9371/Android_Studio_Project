<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Ekran wyświetlacza kalkulatora -->

    <!-- Układ siatki przycisków -->
    <TextView
        android:id="@+id/display"
        android:layout_width="365dp"
        android:layout_height="157dp"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:gravity="end"
        android:padding="24dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="388dp"
        android:layout_height="551dp"
        android:layout_margin="1dp"
        android:background="#CCCCCC"
        android:backgroundTint="#8FFFFFFF"
        android:columnCount="4"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display">

        <Button
            android:id="@+id/button_1S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="CE"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:backgroundTint="@color/white" />

        <Button
            android:id="@+id/button_CE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="CE"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:backgroundTint="@color/blue" />

        <Button
            android:id="@+id/button_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="^"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:backgroundTint="@color/blue" />

        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="√"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:backgroundTint="@color/blue" />

        <Button
            android:id="@+id/button_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="C"
            android:textColor="@color/red"
            android:textSize="40sp"
            app:backgroundTint="@color/grey" />


        <Button
            android:id="@+id/button_bracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="( )"
            android:textColor="@color/blue"
            android:textSize="30sp"

            app:backgroundTint="@color/grey" />

        <Button
            android:id="@+id/button_procet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="%"
            android:textColor="@color/blue"
            android:textSize="50sp"
            app:backgroundTint="@color/grey" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="/"
            android:textColor="@color/blue"
            android:textSize="50sp"
            app:backgroundTint="@color/grey" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="X"
            android:textColor="@color/blue"
            android:textSize="32sp"
            app:backgroundTint="@color/grey" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="-"
            android:textColor="@color/blue"
            android:textSize="50sp"
            app:backgroundTint="@color/grey" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="+"
            android:textColor="@color/blue"
            android:textSize="50sp"
            app:backgroundTint="@color/grey" />

        <Button
            android:id="@+id/button_add_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="+/-"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_comma"
            android:layout_width="16dp"
            android:layout_height="33dp"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="."
            android:textColor="@color/white"
            android:textSize="50sp"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="77dp"
            android:layout_height="60dp"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="="
            android:textColor="@color/white"
            android:textSize="50sp"
            app:backgroundTint="@color/blue" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
